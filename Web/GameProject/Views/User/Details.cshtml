@model GnsGameProject.Service.Common.UserService.Models.UserInfoModel

@{
    ViewData["Title"] = "Details";
}

<h1>Статистика игрока</h1>

<div>
    <h4>Детали</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Выигрышей
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountOfWin)
        </dd>
        <dt class="col-sm-2">
            Проигрышей
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountOfLose)
        </dd>
        <dt class="col-sm-2">
           Сыгранных игр
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameCount)
        </dd>
    </dl>
</div>
