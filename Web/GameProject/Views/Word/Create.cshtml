@model GnsGameProject.Service.Common.WordService.Models.WordModel

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Question" class="control-label">Введите вопрос</label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SecretWord" class="control-label">Введите ответ</label>
        <input asp-for="SecretWord" class="form-control" />
        <span asp-validation-for="SecretWord" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>

</form>
